<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Assingment.Views.InstructorView"
             Title="InstructorView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Instructor View!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Entry Text="{Binding Query}" Grid.Column="0"/>
            <Button Text="Search" Clicked="SearchClick" Grid.Column="1"/>
        </Grid>
        <ListView
            ItemsSource="{Binding Students}">
        </ListView>
        <Button Text="Students" Clicked="InstructorStudentViewClicked"></Button>
        <Button Text="Courses" Clicked="InstructorCourseViewClicked"></Button>
        <Button Text="Back" Clicked="BackButtonClicked"></Button>
    </VerticalStackLayout>
</ContentPage>