<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Assingment.Views.InstructorView"
             Title="InstructorView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to Instructor View!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <ListView
            ItemsSource="{Binding Persons}"
            SelectedItem="{Binding SelectedPerson}">
        </ListView>
        <Button Text="Add Student" Clicked="AddStudentClicked"></Button>
        <Button Text="Remove Student" Clicked="RemoveStudentClicked"></Button>
        <Button Text="Enroll Student" Clicked="EnrollStudentClicked"></Button>
        <ListView
            ItemsSource="{Binding Courses}"
            SelectedItem="{Binding SelectedCourse}">
        </ListView>
        <Button Text="Add Course" Clicked="AddCourseClicked"></Button>
        <Button Text="Add Module/Assignment" Clicked="AddModuleAssignmentClicked"></Button>
        <Button Text="Back" Clicked="BackButtonClicked"></Button>
    </VerticalStackLayout>
</ContentPage>