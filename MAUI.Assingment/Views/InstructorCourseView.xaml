<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Assingment.Views.InstructorCourseView"
             Title="InstructorCourseView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
            Text="Instructor Course View"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView
            ItemsSource="{Binding Courses}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Code}"/>
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding Description}"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Course" Clicked="AddCourseClicked"></Button>
        <Button Text="Update Course" Clicked="UpdateCourseClicked"></Button>
        <Button Text="Module/Assignment/Submission" Clicked="AddModuleAssignmentClicked"></Button>
        <Button Text="Back" Clicked="BackButtonClicked"></Button>
    </VerticalStackLayout>
</ContentPage>