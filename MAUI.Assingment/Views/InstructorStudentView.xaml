<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Assingment.Views.InstructorStudentView"
             Title="InstructorStudentView"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
            Text="Instructor Student View"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <ListView
            ItemsSource="{Binding Persons}"
            SelectedItem="{Binding SelectedPerson}">
        </ListView>
        <Button Text="Add Student" Clicked="AddStudentClicked"></Button>
        <Button Text="Update Student" Clicked="UpdateStudentClicked"></Button>
        <Button Text="Delete Student" Clicked="DeleteStudentClicked"></Button>
        <Button Text="Enroll Student" Clicked="EnrollStudentClicked"></Button>
        <Button Text="Drop Student" Clicked="DropStudentClicked"></Button>
        <Button Text="Back" Clicked="BackButtonClicked"></Button>
    </VerticalStackLayout>
</ContentPage>