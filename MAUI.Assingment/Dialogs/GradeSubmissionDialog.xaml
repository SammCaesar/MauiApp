<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Assingment.Dialogs.GradeSubmissionDialog"
             Title="GradeSubmissionDialog"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
            Text="Grade Submission"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="Pick which Submission you would like to Grade."
            VerticalOptions="Start" 
            HorizontalOptions="Start" />
        <ListView
            ItemsSource="{Binding Submissions}"
            SelectedItem="{Binding SelectedSubmission}">
        </ListView>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label Text="Grade" Grid.Column="0" Grid.Row="0"/>
            <Entry Text="{Binding Grade}" Grid.Column="1" Grid.Row="0"/>
        </Grid>
        <Button Text="Grade Submission" Clicked="GradeSubmissionButtonClicked"></Button>
        <Button Text="Cancel" Clicked="BackButtonClicked"></Button>
    </VerticalStackLayout>
</ContentPage>