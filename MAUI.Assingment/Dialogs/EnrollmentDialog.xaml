<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Assingment.Dialogs.EnrollmentDialog"
             Title="EnrollmentDialog"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label 
            Text="Enroll Student"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
             Text="Select Class for Student to Enroll in."
             VerticalOptions="Start" 
             HorizontalOptions="Start" />   
        <ListView
            ItemsSource="{Binding Courses}"
            SelectedItem="{Binding SelectedCourse}">    
        </ListView>
        <Label 
            Text="Select Student to Enroll."
            VerticalOptions="Start" 
            HorizontalOptions="Start" />   
        <ListView
             ItemsSource="{Binding Persons}"
             SelectedItem="{Binding SelectedPerson}">
        </ListView>
        <Button Text="Enroll Student" Clicked="EnrollStudentClicked"></Button>
        <Button Text="Cancel" Clicked="BackButtonClicked"></Button>
    </VerticalStackLayout>
</ContentPage>