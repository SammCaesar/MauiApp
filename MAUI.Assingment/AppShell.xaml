<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.Assingment.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI.Assingment"
    xmlns:local2="clr-namespace:MAUI.Assingment.Views"
    xmlns:local3="clr-namespace:MAUI.Assingment.Dialogs"
    Shell.FlyoutBehavior="Disabled"
    Title="MAUI.Assingment">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent 
        Title="Instructor"
        ContentTemplate="{DataTemplate local2:InstructorView}"
        Route="Instructor"/>
    <ShellContent 
        Title="Student Details"
        ContentTemplate="{DataTemplate local3:StudentDialog}"
        Route="StudentDetails"/>
    <ShellContent 
        Title="Course Details"
        ContentTemplate="{DataTemplate local3:CourseDialog}"
        Route="CourseDetails"/>
    <ShellContent 
        Title="Student"
        ContentTemplate="{DataTemplate local2:StudentView}"
        Route="Student"/>    

</Shell>
